# selection history
###

:selectionHistory
	a lal:ApplicationBean ;
	rdfs:label "ViPER Selection History" ;
	lal:className "edu.umd.cfar.lamp.viper.gui.core.SelectionHistory" ;
	lal:requires :mediator ;
	lal:setProperty [
		lal:propertyName "Mediator" ;
		lal:propertyValue :mediator ] .
:selectionHistoryMenuGroup
	a menu:Group ;
	rdfs:label "Selection History" ;
	menu:attachment :editmenu ;
	menu:priority "13" .
:prevSelectionMenuItem
	a menu:Item ;
	menu:attachment :selectionHistoryMenuGroup ;
	rdfs:label "Previous Selection" ;
	rdfs:comment "Go back to the last item you selected, and the frame it was on" ;
	menu:generates :previousSelectionActionate ;
	menu:mnemonic "P" ;
	menu:priority "1" .
:nextSelectionMenuItem
	a menu:Item ;
	menu:attachment :selectionHistoryMenuGroup ;
	rdfs:label "Next Selection" ;
	rdfs:comment "Go forward in the selection history" ;
	menu:generates :nextSelectionActionate ;
	menu:mnemonic "N" ;
	menu:priority "2" .
:previousSelectionActionate
	a lal:Action ;
	dc:description "Goes to the last selection in the selection history" ;
	lal:sendsTo [
		lal:listenerBean :selectionHistory ;
		lal:listenerType "GoBackAction" ] .
:nextSelectionActionate
	a lal:Action ;
	dc:description "Goes to the next selection in the selection history" ;
	lal:sendsTo [
		lal:listenerBean :selectionHistory ;
		lal:listenerType "GoForwardAction" ] .
		